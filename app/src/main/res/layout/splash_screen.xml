<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:ignore="Overdraw">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_splash_title"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="@string/welcome_to_dcb_bank_mobile_banking"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/titleColor"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginLeft="0dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/splash_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:progressDrawable="@drawable/progress_status"
        android:indeterminateOnly="false"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"/>


</android.support.constraint.ConstraintLayout>